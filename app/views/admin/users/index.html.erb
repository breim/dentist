<h2 class="dashboard-title">Usu√°rios</h2>
<hr/>

<div class="row">
  <div class="col-md-4">
    <%= form_tag(admin_users_path, class: 'row', method: :get) do %>
    <div class="col-12 col-sm pr-sm-0">
      <%= text_field_tag :search, params[:search], placeholder: 'Name, email, cpf', class: 'form-control' %>
    </div>
    <div class="col-12 col-sm-auto pl-sm-0">
      <%= submit_tag 'Search', class: 'btn btn-primary btn-block' %>
    </div>
    <% end %>
  </div>
</div>
<br/>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Lastname</th> 
      <th>CPF</th>
      <th>Email</th>
      <th>Celphone</th>
      <th></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.last_name %></td> 
    <td><%# user.cpf %></td>
    <td><%= user.email %></td>
    <td><%# user.celphone %></td>
    <td><%= link_to "Editar", edit_admin_user_path(user.id) %></td>
  </tr>
  <% end %>
</table>

<%= render 'shared/paginate', collection: @customers %>

