<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <div class="float-right">
      <%= link_to "Editar".html_safe, edit_admin_user_path(@user.id), class: 'btn btn-rounded waves-effect waves-light btn-outline-primary' %>
      <%= link_to "<i class='fa fa-user-secret' aria-hidden='true'></i> Logar como usuário".html_safe, admin_user_path(@user.id, login_as_user: true), class: 'btn btn-rounded waves-effect waves-light btn-outline-danger' %>
    </div>
    <h3>Usuários</h3>
  </div>
</div>

<div class="row">  
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <% @user.inspect.to_s.split(',').each do |row| %>
        <%= row %><br/>
        <% end %>
        <hr/>
        <h5>Pagamentos</h5>
      </div>
    </div>
  </div>
</div>
