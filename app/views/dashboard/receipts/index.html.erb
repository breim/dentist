<div class="row">
  <div class="col-lg-5 col-md-3 col-sm-4">
    <h3>Recibos</h3>
  </div>
  <div class="col-lg-4 col-md-6 col-sm-5">
    <%= form_tag(dashboard_receipts_path, class: 'row', method: :get) do %>
    <div class="zcol-12 col-sm pr-sm-0">
      <%= text_field_tag :search, params[:search], placeholder: 'Nome ou CPF', class: 'form-control' %>
    </div>
    <div class="col-12 col-sm-auto pl-sm-0">
      <%= button_tag(type: 'submit', class: 'btn btn-primary btn-block') do %>
        <i class='fa fa-search'></i>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-3">
    <%= link_to "<i class='fa fa-plus-circle' aria-hidden='true'></i> Novo recibo".html_safe, new_dashboard_receipt_path, class: 'btn btn-rounded waves-effect waves-light btn-outline-primary float-right' %>
  </div>
</div>

<div id="receipts">
  <div class="row">  
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <%= render 'receipts' %>
        </div>
      </div>
    </div>
  </div>
</div>
