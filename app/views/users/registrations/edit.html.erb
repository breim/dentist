<body class="fix-header fix-sidebar card-no-border">
  <div id="main-wrapper">
    <%= render 'navbars/header_dashboard' %>
    <div class="container">
      <%= render 'navbars/left_sidebar_dashboard' %>
      <div class="page-wrapper">
        <div class="container-fluid">
          <%= render 'shared/flash_messages' %>
          <div class="row">  
            <div class="col-sm-12">
              <h3>Minha conta</h3>
              <div class="card">
                <div class="card-body">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="form-group row">
                    <div class="col-6">
                      <%= f.label :name, "Nome" %><br />
                      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
                    </div>
                  </div>

                  <div class="form-group row">
                    <div class="col-6">
                      <%= f.label :email %>
                      <%= f.email_field :email, autocomplete: "email", class: 'form-control', disabled: true %>
                    </div>
                  </div>

                  <hr/>

                  <div class="form-group">
                    <button type="button" class="btn btn-outline-secondary password-change"><i class="fa fa-lock" aria-hidden="true"></i> Deseja alterar sua senha ?</button>
                  </div>
                  
                  <div id="password">
                    <div class="form-group row">
                      <div class="col-5">
                        <%= f.label :password, "Nova senha" %>
                        <%= f.password_field :password, class: 'form-control' %>
                      </div>
                    </div>
                  </div>
                  <div class="actions">
                    <%= f.submit "Salvar", class: 'btn btn-outline-primary btn' %>
                  </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

