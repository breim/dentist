<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{flash_class(key.to_s)} container" unless value.blank? %>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    msg = $(".flash").text();
    if(msg.length > 0) {
      $(".flash").fadeIn(400).delay(9000).fadeOut(400);
    }
  });
</script>
